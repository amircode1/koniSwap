# -------------
# ðŸ”§ Variables
# -------------

SRC_DIR := src
OUT_DIR := out
TEST_DIR := test
BUILD_INFO := build-info
BROADCAST := broadcast
SCRIPT_DIR := script

# -------------
# ðŸ› ï¸ Commands
# -------------

# ðŸ“¦ Build all contracts
build:
	forge build --out $(OUT_DIR) --build-info --via-ir

# ðŸ§ª Run tests (unit + fuzz + invariant)
test:
	forge test -vv

# ðŸ§ª Run specific test file: make test-file FILE=MyTest.t.sol
test-file:
	forge test -vv --match-path $(TEST_DIR)/$(FILE)

# ðŸš€ Deploy to local anvil
deploy:
	forge script $(SCRIPT_DIR)/Deploy.s.sol --fork-url http://localhost:8545 --broadcast --verify -vvvv

# ðŸš€ Deploy to any RPC: make deploy-url URL=https://rpc-url
deploy-url:
	forge script $(SCRIPT_DIR)/Deploy.s.sol --rpc-url $(URL) --broadcast -vvvv

# ðŸ”¬ Inspect size of contracts
size:
	forge size

# ðŸ’¡ Generate coverage report
coverage:
	forge coverage
# ðŸ§¹ Clean build artifacts
clean:
	forge clean

# âš™ï¸ Anvil local node
anvil:
	anvil -p 8545 --block-time 1

# ðŸ” Watch contract changes and rebuild automatically
watch:
	fswatch -o $(SRC_DIR) | xargs -n1 -I{} make build

# ðŸ†” Check contract ABI
abi:
	forge inspect $(CONTRACT) abi

# ðŸ“„ Flatten contract
flatten:
	forge flatten $(SRC_DIR)/$(CONTRACT).sol > flat/$(CONTRACT).flat.sol
